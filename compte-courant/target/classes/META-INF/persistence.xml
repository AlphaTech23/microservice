<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="comptecourantPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/banqueDS</jta-data-source>
        <class>com.example.comptecourant.model.Client</class>
        <class>com.example.comptecourant.model.CompteCourant</class>
        <class>com.example.comptecourant.model.MouvementCourant</class>
        <class>com.example.comptecourant.model.Statut</class>
        <class>com.example.comptecourant.model.StatutMouvement</class>
        <class>com.example.comptecourant.model.TypeMouvementCourant</class>
        <class>com.example.comptecourant.model.StatutMouvementId</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>